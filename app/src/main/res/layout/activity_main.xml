<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/breathe"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/meditation"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:onClick="go_to_media_page"
        android:text="meditation"
        android:textSize="16dp" />

    <Button
        android:id="@+id/quote"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:onClick="go_to_quote_page"
        android:text="quote" />

    <Button
        android:id="@+id/meme_button"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:onClick="go_to_meme_page"
        android:text="meme" />

    <Button
        android:id="@+id/phone"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:onClick="go_to_call_page"
        android:text="phone" />



</androidx.appcompat.widget.LinearLayoutCompat>